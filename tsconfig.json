{
	"compilerOptions": {
		"target": "ES6",                      // ECMAScript target version
		"module": "ESNext",                    // Module system to use (ESNext for dynamic import support)
		"jsx": "react-jsx",                    // Specifies JSX support (use "react" if youâ€™re on an older version)
		"strict": true,                        // Enables all strict type-checking options
		"moduleResolution": "node",            // Use Node module resolution strategy
		"esModuleInterop": true,               // Enables interoperability between CommonJS and ES modules
		"skipLibCheck": true,                  // Skips type checking of declaration files
		"forceConsistentCasingInFileNames": true,  // Enforces consistent file naming
		"declaration": true,                   // Generates declaration (.d.ts) files for TypeScript
		"outDir": "./dist"                     // Specifies the output directory for compiled files
	},
	"include": ["src"],                        // Specifies the directory containing the source files
	"exclude": ["node_modules", "dist"]        // Excludes unnecessary directories
}
